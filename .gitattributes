# Auto detect text files and normalize line endings to LF
* text=auto

# Source code
*.py text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.json text eol=lf
*.html text eol=lf
*.css text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.sh text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf
*.sql text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=lf

# Config files
.gitignore text eol=lf
.gitattributes text eol=lf
.editorconfig text eol=lf
*.conf text eol=lf
*.config text eol=lf

# Documentation
*.md text eol=lf
LICENSE text eol=lf
README text eol=lf

# Graphics
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text eol=lf
*.webp binary

# Audio/Video
*.mp3 binary
*.mp4 binary
*.wav binary
*.ogg binary
*.webm binary

# Fonts
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary
*.eot binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.7z binary
*.rar binary

# Other binaries
*.exe binary
*.dll binary
*.so binary
*.dylib binary
*.pdf binary

# Database
*.db binary
*.sqlite binary
*.sqlite3 binary
